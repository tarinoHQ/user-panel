        text-align: right
        font-size: 13px
        font-weight: 600
        line-height: 1.4em
        vertical-align: middle

    // styles
    &--selected
      background: #fff
      border-left: 1px solid #e5e5e5
      border-bottom: 1px solid transparent

  &__head
    padding: 0 15px 0 15px
    @mixin clearfix

    &__button
      float: left
      margin-top: 10px
      margin-right: 10px

    &__group
      float: right;

    &__suptitle
      position: relative
      font-size: 15px
      font-weight: bold
      margin: 0
      color: #777
      /*padding-right: 26px*/

      &:before
        /*content: "\e010"*/
        position: absolute
        top: 2px
        right: 3px
        font-family: 'tpanel'
        font-size: 15px
        line-height: 20px
        color: #bbb


    &__title
      position: relative
      font-size: 20px
      font-weight: 600
      line-height: 1.3em
      margin: 5px 0 0 0
      padding-right: 26px
      color: #444

      &:before
        content: "\f0db"
        position: absolute
        top: 2px
        right: 0
        font-family: 'tpanel'
        font-size: 19px
        line-height: 20px
        color: #aaa


  &__main
    margin-top: 10px
    padding: 0 15px 15px 15px

  &__details
    padding-bottom: 20px
    margin-top: 10px

    @mixin clearfix

    &__close-btn
      position: absolute
      bottom: 15px
      right: 15px

      @media (--small-viewport)
